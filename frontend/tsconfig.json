{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve", // or "react-jsx" depending on your framework

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Vite specific types */
    "types": ["vite/client"] // Add this line
  },
  "include": ["src"], // Adjust if your source code is elsewhere
  "references": [{ "path": "./tsconfig.node.json" }] // Keep if you have a tsconfig.node.json
}
